[Unit]
Description=kubelet
Wants=network-online.target remote-fs.target
After=network-online.target remote-fs.target

[Service]
ExecStartPre=/etc/kubernetes/kubelet-pre.sh
ExecStart=/usr/local/bin/kubelet --hostname-override={{worker_ip}} --kubeconfig=/etc/kubernetes/kubelet.conf --config={{root_dir}}/config.yaml --root-dir={{root_dir}} --pod-infra-container-image={{images.pause}} --network-plugin=cni
Restart=always
RestartSec=15

[Install]
WantedBy=multi-user.target
